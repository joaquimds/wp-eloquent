<?xml version="1.0"?>
<ruleset name="Starter Project ">
    <description>Starter Project Coding Standards</description>

    <!-- Scan all files in directory -->
    <file>web/app/themes/outlandish/.</file>

    <!-- Scan only PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show progress and sniff codes in all reports -->
    <arg value="ps"/>

    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2"/>
</ruleset>